<Window x:Class="Laba2_hash_algorithms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:Laba2_hash_algorithms.ViewModels;assembly=Laba2-hash-algorithms"
        DataContext="loc:HashCodeViewModel"
        
        Title="MainWindow" Width="778" MinWidth="778" MinHeight="400" MaxHeight="700">

    <DockPanel Background="FloralWhite">
        <Menu DockPanel.Dock="Top" Background="CadetBlue" Foreground="White" FontSize="18" Margin="2">
            <MenuItem Name="OpenFileMenuItem" Height="40" Width="100" Click="OpenFileMenuItem_Click">
                <MenuItem.Header>
                    <TextBlock Text="File"/>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Name="ExitMenuItem" Height="40" Width="100" Header="Exit" Click="ExitMenuItem_Click"></MenuItem>
        </Menu>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <RichTextBox Grid.Row="0" Grid.Column="0" Margin="10,5,10,5">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="{Binding OriginalValue}"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            <StackPanel Grid.Row="1" Grid.Column="0" Margin="10,5,10,5">
                <Label Content="Hashcode HEX"></Label>
                <TextBox Text="{Binding HashCodeHex}"/>
                <Label Content="Hashcode BIN"></Label>
                <TextBox Text="{Binding HashCodeBin}"/>
            </StackPanel>

        </Grid>
    </DockPanel>
</Window>
